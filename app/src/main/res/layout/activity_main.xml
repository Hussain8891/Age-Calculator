<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent">


       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical">

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Today date"
               android:textSize="25sp"
               android:layout_marginLeft="10dp"
               android:layout_marginTop="10dp"
               android:textColor="#000000"/>

           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="60dp"
               android:orientation="vertical"
               android:background="@drawable/rounded_layout"
               android:layout_marginRight="10dp"
               android:layout_marginLeft="10dp"
               android:layout_marginTop="10dp">

               <TextView
                   android:id="@+id/today_date"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="DD/MM/YYYY"
                   android:textSize="30sp"
                   android:textColor="#000000"
                   android:layout_centerInParent="true"/>

           </RelativeLayout>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Your Date of Birth"
               android:textSize="25sp"
               android:layout_marginLeft="10dp"
               android:layout_marginTop="20dp"
               android:textColor="#000000"/>

           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="60dp"
               android:background="@drawable/rounded_layout"
               android:layout_marginTop="10dp"
               android:layout_marginRight="10dp"
               android:layout_marginLeft="10dp">

               <TextView
                   android:id="@+id/enter_date"
                   android:layout_width="280dp"
                   android:layout_height="match_parent"
                   android:text="DD/MM/YYYY"
                   android:paddingLeft="15dp"
                   android:layout_marginTop="10dp"
                   android:textColor="#000000"
                   android:textSize="25sp"/>

               <ImageView
                   android:id="@+id/take_date"
                   android:layout_width="60dp"
                   android:layout_height="60dp"
                   android:layout_toRightOf="@+id/enter_date"
                   android:layout_marginLeft="10dp"
                   android:src="@drawable/calender"
                   android:padding="5dp"/>

           </RelativeLayout>

           <Button
               android:id="@+id/calculate_btn"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Calculate"
               android:textSize="25sp"
               android:layout_marginLeft="10dp"
               android:layout_marginRight="10dp"
               android:layout_marginTop="20dp"
               android:background="#0961EA"
               android:textColor="#FFFFFF"/>

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Your Current Age"
               android:textSize="25sp"
               android:layout_marginTop="10dp"
               android:layout_marginLeft="10dp"
               android:textColor="#000000"/>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="80dp"
               android:orientation="horizontal"
               android:background="@drawable/rounded_layout"
               android:layout_marginTop="20dp"
               android:layout_marginRight="10dp"
               android:layout_marginLeft="10dp">

               <RelativeLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="20dp">

                   <TextView
                       android:id="@+id/text_txt"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Year"
                       android:textSize="20sp"
                       android:layout_marginLeft="20dp"
                       android:textColor="#000000"/>
                   <TextView
                       android:id="@+id/year_result"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="00"
                       android:textSize="25sp"
                       android:textColor="#000000"
                       android:layout_centerHorizontal="true"
                       android:layout_below="@+id/text_txt"
                       android:layout_marginLeft="60dp"
                       android:layout_marginTop="10dp"/>


               </RelativeLayout>
               <RelativeLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="30dp">

                   <TextView
                       android:id="@+id/text_txt1"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Months"
                       android:textSize="20sp"
                       android:layout_marginLeft="20dp"
                       android:textColor="#000000"/>
                   <TextView
                       android:id="@+id/month_result"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="00"
                       android:textSize="25sp"
                       android:textColor="#000000"
                       android:layout_centerHorizontal="true"
                       android:layout_below="@+id/text_txt1"
                       android:layout_marginLeft="60dp"
                       android:layout_marginTop="10dp"/>


               </RelativeLayout>
               <RelativeLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="40dp">

                   <TextView
                       android:id="@+id/text_txt0"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Days"
                       android:textSize="20sp"
                       android:layout_centerHorizontal="true"
                       android:textColor="#000000"/>
                   <TextView
                       android:id="@+id/day_result"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="00"
                       android:textSize="25sp"
                       android:textColor="#000000"
                       android:layout_centerHorizontal="true"
                       android:layout_below="@+id/text_txt0"
                       android:layout_marginTop="10dp"/>


               </RelativeLayout>
           </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="300dp"
               android:background="@drawable/rounded_layout"
               android:layout_marginTop="20dp"
               android:layout_marginRight="5dp"
               android:layout_marginLeft="5dp"
               android:orientation="vertical">

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:layout_marginTop="10dp">

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Age in Years"
                       android:textSize="20sp"
                       android:textColor="#000000"
                       android:layout_marginLeft="10dp" />

                   <TextView
                       android:id="@+id/age_years"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="0"
                       android:textColor="#000000"
                       android:textSize="15sp"
                       android:layout_marginLeft="83dp"/>

               </LinearLayout>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:layout_marginTop="10dp">

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Age in Months"
                       android:textSize="20sp"
                       android:textColor="#000000"
                       android:layout_marginLeft="10dp" />

                   <TextView
                       android:id="@+id/age_months"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="0"
                       android:textColor="#000000"
                       android:textSize="15sp"
                       android:layout_marginLeft="65dp"/>

               </LinearLayout>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:layout_marginTop="10dp">

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Age in Days"
                       android:textSize="20sp"
                       android:textColor="#000000"
                       android:layout_marginLeft="10dp" />

                   <TextView
                       android:id="@+id/age_days"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="0"
                       android:textColor="#000000"
                       android:textSize="15sp"
                       android:layout_marginLeft="90dp"/>

               </LinearLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:layout_marginTop="10dp">

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Age in Weeks"
                       android:textSize="20sp"
                       android:textColor="#000000"
                       android:layout_marginLeft="10dp" />

                   <TextView
                       android:id="@+id/age_weeks"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="0"
                       android:textColor="#000000"
                       android:textSize="15sp"
                       android:layout_marginLeft="75dp"/>

               </LinearLayout>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:layout_marginTop="10dp">

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Age in Hours"
                       android:textSize="20sp"
                       android:textColor="#000000"
                       android:layout_marginLeft="10dp" />

                   <TextView
                       android:id="@+id/age_hours"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="0"
                       android:textColor="#000000"
                       android:textSize="15sp"
                       android:layout_marginLeft="82dp"/>

               </LinearLayout>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:layout_marginTop="10dp">

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Age in Minutes"
                       android:textSize="20sp"
                       android:textColor="#000000"
                       android:layout_marginLeft="10dp" />

                   <TextView
                       android:id="@+id/age_minutes"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="0"
                       android:textColor="#000000"
                       android:textSize="15sp"
                       android:layout_marginLeft="65dp"/>

               </LinearLayout>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:layout_marginTop="10dp">

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Age in Seconds"
                       android:textSize="20sp"
                       android:textColor="#000000"
                       android:layout_marginLeft="10dp" />

                   <TextView
                       android:id="@+id/age_seconds"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="0"
                       android:textColor="#000000"
                       android:textSize="15sp"
                       android:layout_marginLeft="60dp"/>

               </LinearLayout>

           </LinearLayout>
       </LinearLayout>
   </ScrollView>
</RelativeLayout>